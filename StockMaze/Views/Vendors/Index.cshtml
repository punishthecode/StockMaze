@model IEnumerable<StockMaze.Models.Vendor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.vendorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vendorAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vendorPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vendorEmail)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.vendorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vendorAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vendorPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vendorEmail)
            </td>
           <td><a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.vendorId"><i class="bi bi-pencil-square"></i>Edit</a></td>
			<td><a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.vendorId"><i class="bi bi-eye"></i>Details</a></td>
			<td><a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.vendorId"><i class="bi bi-trash"></i>Delete</a></td>
        </tr>
}
    </tbody>
</table>
<div style="position:fixed; right:50px; bottom:100px;" class="text-white">
	<a class="btn btn-success " asp-controller="Vendors" asp-action="Create"><i class="bi bi-plus-circle"></i>Create</a>
</div>
