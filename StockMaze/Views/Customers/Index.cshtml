@model IEnumerable<StockMaze.Models.Customer>

@{
    ViewData["Title"] = "Index";
    int intsno=0;
}

<h2 class="text-center">Customers</h2>
<div class="col-4 p-0 justify-content-end">
	<form asp-controller="Customers" asp-action="Index" method="get">
		<span style="padding-top:100px;" class="btn-group">
			<input class="form-control" type="text" name="SearchText" placeholder="Search Product" />
			<input style="background-color:rgb(164,115,67); border-radius:5px; color:white;" class="p-1 m-lg-2 btn btn-sm btn-info" type="submit" value="Search" />
		</span>
	</form>
</div>
<div class="row text">
<div class="col-md-8 offset-2">
<div style="padding-top:100px;" class="row">
<div class="col-md-8 offset-2">
		<table  style="border : 1px solid black; padding : 10px;" class="table">
    <thead>
        <tr style="text-align:center">
            <th>S.no</th>
            <th>
                @Html.DisplayNameFor(model => model.customerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.customerAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.customerPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.customerEmail)
            </th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    intsno = intsno + 1;
        <tr>
            <td>@intsno</td>
            <td>
                @Html.DisplayFor(modelItem => item.customerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customerAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customerPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customerEmail)
            </td>
               <td>
						<div class="btn-group">
						<a class="btn btn-sm btn-outline-primary" style="margin-right:16px" asp-action="Edit" asp-route-id="@item.customerId"><i class="bi bi-pencil-square"></i>Edit</a>
						<a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.customerId"><i class="bi bi-eye"></i>Details</a>
						<a class="btn btn-sm btn-outline-danger" style="margin-left:16px"asp-action="Delete" asp-route-id="@item.customerId"><i class="bi bi-trash"></i>Delete</a>
						</div>
						</td>
            </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>
<div style="position:fixed; right:50px; bottom:100px;" class="text-white">
	<a class="btn btn-success " asp-controller="Customers" asp-action="Create"><i class="bi bi-plus-circle"></i>Create</a>
</div>
